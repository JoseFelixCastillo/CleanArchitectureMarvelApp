<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenBankTest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/description_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>